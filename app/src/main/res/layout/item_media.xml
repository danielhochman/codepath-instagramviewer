<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_margin="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:id="@+id/ivProfilePicture"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:id="@+id/tvUsername"
        android:text="Username"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/ivProfilePicture"
        android:layout_alignBottom="@+id/ivProfilePicture"
        android:layout_toRightOf="@+id/ivProfilePicture"
        android:layout_toEndOf="@+id/ivProfilePicture" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_margin="5dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/tvRelativeTime"
        android:layout_toLeftOf="@+id/tvRelativeTime"
        android:layout_toStartOf="@+id/tvRelativeTime"
        android:src="@drawable/ic_clock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/ivProfilePicture"
        android:layout_alignBottom="@+id/ivProfilePicture"
        android:text="3h ago"
        android:textColor="#AAAAAA"
        android:gravity="center_vertical"
        android:id="@+id/tvRelativeTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.runops.instagramviewer.DynamicImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/ivPrimaryImage"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="4dp"
        android:id="@+id/ivLikeIcon"
        android:scaleType="centerInside"
        android:src="@drawable/ic_like"
        android:layout_below="@+id/ivPrimaryImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        android:id="@+id/tvLikeCount"
        android:layout_alignTop="@+id/ivLikeIcon"
        android:layout_toEndOf="@id/ivLikeIcon"
        android:layout_toRightOf="@id/ivLikeIcon" />

    <LinearLayout
        android:id="@+id/llComments"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLikeIcon"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
